<form class="login-form py-4 bg-gradient-to-b from-blue-300 hover:origin-top  to-red-100 max-w-sm px-6 bg-white rounded-lg shadow-xl mx-auto">
  <h2 class="text-center mb-3 text-2xl font-bold">Log In Here!</h2>
  <div class="mb-4 block">
    <label for="email-login">Email:</label>
    <input class="p-1" autocomplete="current-email" type="email" id="email-login" />
  </div>
  <div class="mb-6 block">
    <label for="password-login">Password:</label>
    <input class="p-1" autocomplete="current-password" type="password" id="password-login" />
  </div>
  <div class='flex flex-col md:flex-row justify-between'>
    <button
      type="submit"
      class="mb-4 p-2 px-3 w-1/3 md:w-full md:mx-4 bg-green-500 hover:text-blue-700 transition duration-300 transform hover:scale-110 hover:bg-green-400 rounded-lg block"
    >Login</button>
      <a
    class="bg-yellow-400 w-1/3 md:w-full transform hover:scale-110 md:mx-4 text-center mb-4 block hover:text-red-400 transition duration-300 hover:bg-yellow-300 rounded-lg p-2 px-3"
    href="/signup"
      >Sign up</a>
  </div>
</form>

<script src="/javascript/login.js"></script>