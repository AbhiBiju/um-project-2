<div class="w-full h-screen flex flex-row m-0 p-0">
  <div class="w-full md:w-3/12 bg-gray-800 flex flex-col items-center">
  <img
      class="rounded-full my-3 w-1/2"
      src="{{user.avatar}}"
      alt="profile picture"
    />
  <h2 class='bg-gray-100 px-8 text-2xl font-bold p-1 my-2 rounded-lg'>{{user.username}}</h2>
  <div class='list-none'>
    {{#each user.books as |book|}}
    <li class='scale-75 w-full text-center transform transition duration-600 hover:scale-100 justify-center'>
      {{> book-info book}}
      <a href="/dashboard/edit/books/{{book.id}}" class="bg-green-100 rounded-2xl p-2 px-5 border border-green-700 hover:border-green-400 hover:text-white hover:bg-green-800 py-5">Edit book</a>
    </li>
    {{/each}}
  </div>
    </div>
  <div class="w-full md:w-9/12">
  <h2 class='outline text-red-800 test-stroke-green-500 text-center text-3xl font-bold'>My Posts</h2>
    <ol class='grid grid-cols-2'>
      {{#each user.posts as |post|}}
        <li class='p-5 grid-span-1 m-2 scale-50 flex-col text-center justify-center'>
          {{> post-info post}}
          <a href="/dashboard/edit/posts/{{post.id}}" class="bg-green-100 rounded-2xl p-2 px-5 border border-green-700 hover:border-green-400 hover:text-white hover:bg-green-800 py-5">Edit post</a>
        </li>
      {{/each}}
    </ol>
  </div>
</div>