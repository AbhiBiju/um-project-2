<div class='flex flex-row justify-center px-4 text-center'>
  <section class='px-4 flex flex-col justify-end text-center'>
    <h2>Create New Post</h2>
    <form class="new-post-form flex flex-col justify-end">
      <div class='py-2 flex flex-row justify-end'>
        <label for="book-name">Title: </label>
        <input class='border border-black-200 border-px rounded-lg' type="text" id="book-name" name="book-name" />
      </div>
      <div class='py-2 flex flex-row justify-end'>
        <label for="book-author">Author: </label>
        <input class='border border-black-200 border-px rounded-lg' id="book-author" name="book-author" />
      </div>
      <div class='py-2 flex flex-row justify-end'>
        <label for="book-price">Price: </label>
        <input class='border border-black-200 border-px rounded-lg' id="book-price" name="book-price" />
      </div>
      <div class='py-2 flex flex-row justify-end'>
        <label for="content">Content: </label>
        <textarea class='border border-black-200 border-px rounded-lg' id="content" name="content"></textarea>
      </div>
      <div><button type="submit" class="btn bg-green-300 border border-green-500 hover:bg-green-700 hover:border-green-100 hover:text-white rounded-3xl p-1 px-4">Create</button></div>
    </form>
  </section>
  
  <section class='px-4 flex flex-col'>
    <h2>Add A Book</h2>
  
    <form class="new-book-form flex flex-col justify-end">
      <div class='py-2 flex flex-row justify-end'>
        <label for="title">Book Title: </label>
        <input class='border border-black-200 border-px rounded-lg' type="text" id="title" name="title" />
      </div>
      <div class='py-2 flex flex-row justify-end'>
        <label for="author">Book Author: </label>
        <input class='border border-black-200 border-px rounded-lg' id="author" name="author" />
      </div>
      <div class='py-2 flex flex-row justify-end'>
        <label for="review">Review: </label>
        <textarea class='border border-black-200 border-px rounded-lg' id="review" name="review"></textarea>
      </div>
      <div><button type="submit" class="btn bg-green-300 border border-green-500 hover:bg-green-700 hover:border-green-100 hover:text-white rounded-3xl p-1 px-4">Create</button></div>
    </form>
  </section>
</div>

{{#if user.posts}}
<section class='text-center'>
  <h2>Your Posts</h2>
  <ol>
    {{#each user.posts as |post|}}
    <li class='p-5 flex-col text-center justify-center'>
      {{> post-info post}}
      <a href="/dashboard/edit/posts/{{post.id}}" class="edit-link bg-green-100 rounded-2xl p-2 px-5 border border-green-700 hover:border-green-400 hover:text-white hover:bg-green-800 py-5">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

{{#if user.books}}
<section class='text-center'>
  <h2>Your Books</h2>
  <ol>
    {{#each user.books as |book|}}
    <li class='p-5 flex-col text-center transform transition duration-600 hover:scale-105 justify-center'>
      {{> book-info book}}
      <a href="/dashboard/edit/books/{{book.id}}" class="edit-link bg-green-100 rounded-2xl p-2 px-5 border border-green-700 hover:border-green-400 hover:text-white hover:bg-green-800 py-5">Edit book</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

{{#if user.started_clubs}}
<section class='text-center'>
  <h2>Your Club</h2>
  <ol>
    <li class='p-5 text-center transform transition duration-600 hover:scale-105 justify-center'>
      {{> club-info user.started_clubs}}
    </li>
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
<script src="/javascript/add-book.js"></script>